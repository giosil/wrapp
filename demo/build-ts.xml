			<arg value="${out.dir}/res-es.js" />
		</exec>
	</target>
	
	<target name="compile_common">
		<echo>Compile common...</echo>
		<exec executable="tsc" vmlauncher="false">
			<arg value="--noEmitHelpers" />
			<arg value="--declaration" />
			<arg value="--project" />
			<arg value="./ts/common/tsconfig.json" />
		</exec>
		
		<echo>Minify common...</echo>
		<exec executable="minify" vmlauncher="false">
			<arg value="${out.dir}/common.js" />
		</exec>
	</target>
	
	<target name="compile_dossier">
